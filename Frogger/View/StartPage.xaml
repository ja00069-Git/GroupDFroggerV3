<Page
    x:Class="Frogger.View.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <UserControl.Resources>
    </UserControl.Resources>

    <Canvas Width="{StaticResource AppWidth}" Height="{StaticResource AppHeight}" Background="Transparent">

        <Image Source="Images/start_screen.png" Width="{StaticResource AppWidth}" Height="{StaticResource AppHeight}" />

        <Button Content="" Canvas.Left="230" Canvas.Top="320" Background="Transparent"
                Click="startGameButtonClick" Width="174" Height="35" VerticalAlignment="Top"
                HorizontalAlignment="Center" />

        <Button Content="" Canvas.Left="230" Canvas.Top="360" Background="Transparent"
                Click="scoreBoardButtonClick" Width="174" HorizontalAlignment="Center" Height="30"
                VerticalAlignment="Top" />
    </Canvas>
</Page>